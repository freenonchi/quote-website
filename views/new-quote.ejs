<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>New Quote</title>
  <link rel="stylesheet" href="/public/styles.css">
</head>
<body>
  <h1>New Quote</h1>
  <form action="/save-quote" method="POST">
    <label for="text">Quote:</label><br>
    <textarea id="text" name="text" rows="4" cols="50" required></textarea><br><br>

    <!-- Date Input with "Unknown" Checkbox -->
    <label for="date">Date:</label>
    <input type="date" id="date" name="date">
    <label for="unknown-date">
      <input type="checkbox" id="unknown-date" name="unknownDate"> Set date as "Unknown"
    </label><br><br>

    <!-- Time Input with "Unknown" Checkbox -->
    <label for="time">Time:</label>
    <input type="time" id="time" name="time">
    <label for="unknown-time">
      <input type="checkbox" id="unknown-time" name="unknownTime"> Set time as "Unknown"
    </label><br><br>

    <label for="author">Author:</label>
    <input type="text" id="author" name="author" required><br><br>

    <button type="submit">Save Quote</button>
  </form>

  <script>
    // JavaScript to make date/time fields optional when "Unknown" is checked
    document.getElementById('unknown-date').addEventListener('change', function() {
      const dateInput = document.getElementById('date');
      dateInput.disabled = this.checked;
      if (this.checked) dateInput.value = ''; // Clear the date input
    });

    document.getElementById('unknown-time').addEventListener('change', function() {
      const timeInput = document.getElementById('time');
      timeInput.disabled = this.checked;
      if (this.checked) timeInput.value = ''; // Clear the time input
    });
  </script>
</body>
</html>